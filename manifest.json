{
    "manifest_version" : 3,
    "name" : "SafeSurf",
    "version" : "1.0.0",
    "description" : "SafeSurf is an extension that helps parents to protect their children from inappropriate content on the internet.",
    "author" : "Krishnachandran",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action" : {
        "default_popup" : "index.html",
        "default title" : "SafeSurf"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "notifications",
        "webNavigation"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"]
        }
    ]
}