{
    "manifest_version" : 3,
    "name" : "Kid Shield",
    "version" : "1.0.0",
    "description" : "Kid Shield is an extension that helps parents to protect their children from inappropriate content on the internet.",
    "author" : "Krishnachandran",
    "action" : {
        "default_popup" : "index.html",
        "default title" : "Kid Shield"
    },
    "background" : {
        "scripts" : [
            "background.js",
            "script.js"
        ]
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "<all_urls>"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"]
        }
    ]
}